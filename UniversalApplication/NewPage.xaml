<Page
    x:Class="UniversalApplication.NewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalApplication"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Row1"></RowDefinition>
            <RowDefinition x:Name="Row2"></RowDefinition>
            <RowDefinition x:Name="Row3"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Column1"></ColumnDefinition>
            <ColumnDefinition  x:Name="Column2"></ColumnDefinition>
            <ColumnDefinition  x:Name="Column3"></ColumnDefinition>
        </Grid.ColumnDefinitions>
<!--Put the label in the very center of the page based on the coordinates of our grid-->
        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="100" Foreground="White" Text="Test" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Button x:Name="btnGotoStart" Click="btnGotoStart_Click" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Go Back to main Page" FontSize="60"></Button>
    </Grid>
</Page>
